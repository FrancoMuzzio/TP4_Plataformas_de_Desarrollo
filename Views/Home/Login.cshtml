@{
    ViewData["Title"] = "Iniciar sesión";
}
<div class="text-center">

    <form action="@Url.Action("Login","Home")" method="POST">
        <div class="form-group">
            <label for="dniUsuario">DNI</label>
            <input class="form-control" id="dniUsuario" name="dni" type="number" placeholder="Ingresá tu DNI" />
            <small class="form-text text-muted">Nunca compartiremos tu DNI con nadie.</small>
        </div>
        <div class="form-group">
            <label for="passwordUsuario">Contraseña</label>
            <input class="form-control" id="passwordUsuario" name="password" type="password" placeholder="Ingresá tu contraseña" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Iniciar sesión</button>
    </form>
</div>
