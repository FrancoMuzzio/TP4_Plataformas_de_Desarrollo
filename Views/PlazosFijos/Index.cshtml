@model IEnumerable<WebApplication_plataformas_de_desarrollo.Models.PlazoFijo>

@{
    ViewData["Title"] = "Plazos fijos";
}

<h1>Plazos fijos</h1>

<p>
    <a type="button" class="btn btn-dark" asp-action="Create">Nuevo plazo fijo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cbu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-@(item.pagado?"muted":"dark")">
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cbu)
            </td>
            <td>
                @if (item.pagado)
                {
                    <a type="button" class="btn btn-dark  btn-sm" asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
