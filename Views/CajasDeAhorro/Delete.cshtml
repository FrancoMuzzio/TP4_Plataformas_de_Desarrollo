@model WebApplication_plataformas_de_desarrollo.Models.CajaDeAhorro

@{
    ViewData["Title"] = "Eliminar caja de ahorro";
}

<h1>Eliminar caja de ahorro</h1>

<h3>¿Estas seguro que queres eliminar la caja de ahorro?</h3>
<div>
    <h4>Caja de ahorro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cbu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cbu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <p class="text-danger">@ViewData["mensaje"]</p>
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
