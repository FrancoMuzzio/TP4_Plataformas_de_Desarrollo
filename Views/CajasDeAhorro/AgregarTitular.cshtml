@model WebApplication_plataformas_de_desarrollo.Models.CajaDeAhorro

@{
    ViewData["Title"] = "Agregar titular a caja de ahorro";
}

<h1>Agregar titular a caja de ahorro</h1>

<h3>¿Estas seguro que queres eliminar la caja de ahorro?</h3>
<div>
    <h4>Caja de ahorro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cbu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cbu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
    </dl>
    
    <form asp-action="AgregarTitular">
      <div class="form-group">
        <input type="hidden" asp-for="id" />
        <label for="dni">DNI:</label>
        <input type="number" class="form-control" name="dni" id="dni" placeholder="Dni del nuevo titular.">
        <input type="submit" value="Agregar" class="btn btn-success" />
      </div>
    </form>
</div>
